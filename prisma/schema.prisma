generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 Postgres (quoted) table/column names from your SQL:
  - "Child"(id, name, age, createdAt)
  - "Event"(id, childId, date, title, icon, createdAt)
  - "EmotionEntry"(id, childId, date, emotion, note, createdAt)
 We keep Prisma field names in camelCase and map them to the DB via @@map/@map.
*/

model Child {
  id        Int      @id @default(autoincrement())
  name      String
  age       Int
  createdAt DateTime @default(now()) @db.Timestamptz(6)

  events        Event[]
  emotionEntries EmotionEntry[]

  @@map("Child")
}

model Event {
  id        Int      @id @default(autoincrement())
  childId   Int       @map("childId")
  child     Child     @relation(fields: [childId], references: [id], onDelete: Cascade)
  date      DateTime  @db.Date
  title     String
  icon      String
  createdAt DateTime  @default(now()) @db.Timestamptz(6)

  @@index([childId, date], map: "idx_event_child_date")
  @@map("Event")
}

enum emotion_enum {
  happy
  calm
  excited
  neutral
  sad
  angry
  tired
}

model EmotionEntry {
  id        Int          @id @default(autoincrement())
  childId   Int           @map("childId")
  child     Child         @relation(fields: [childId], references: [id], onDelete: Cascade)
  date      DateTime      @db.Date
  emotion   emotion_enum
  note      String?
  createdAt DateTime      @default(now()) @db.Timestamptz(6)

  @@unique([childId, date])
  @@index([childId, date], map: "idx_emotion_child_date")
  @@map("EmotionEntry")
}
