generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Emotion {
  happy
  sad
  angry
  calm
  excited
  tired
  sick
}

model Child {
  id        String         @id @default(cuid())
  name      String
  age       Int
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  events    Event[]
  emotions  EmotionEntry[]
}

model Event {
  id        String   @id @default(cuid())
  childId   String
  child     Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  date      DateTime @default(now())
  title     String
  details   String?

  @@index([childId, date])
}

model EmotionEntry {
  id        String   @id @default(cuid())
  childId   String
  child     Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  date      DateTime @default(now())
  emotion   Emotion
  note      String?

  @@unique([childId, date])
  @@index([childId, date])
}
