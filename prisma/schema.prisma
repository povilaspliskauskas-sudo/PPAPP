generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum emotion_enum {
  happy
  calm
  excited
  neutral
  sad
  angry
  tired
}

model Child {
  id        String         @id @default(uuid())
  name      String
  age       Int
  events    Event[]
  emotions  EmotionEntry[]
}

model Event {
  id        String   @id @default(uuid())
  childId   String
  child     Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  date      DateTime
  title     String
  icon      String
  createdAt DateTime @default(now())
  @@index([childId, date])
}

model EmotionEntry {
  id        String   @id @default(uuid())
  childId   String
  child     Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  date      DateTime
  emotion   emotion_enum
  note      String?
  createdAt DateTime @default(now())
  @@unique([childId, date])
}
