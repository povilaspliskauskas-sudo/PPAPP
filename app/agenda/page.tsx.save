"use client";

import { useEffect, useMemo, useState } from "react";
import BackHome from "../components/BackHome";
import ChildSwitcher, { Child } from "../components/ChildSwitcher";
import { getTasksForAge, SLOTS, slotLabel, Task } from "@/lib/presets";

export default function AgendaPage() {
  const [child, setChild] = useState<Child | undefined>();
  const [date, setDate] = useState<string>(new Date().toISOString().slice(0, 10));
  const [checkedKeys, setCheckedKeys] = useState<Set<string>>(new Set());

  const tasks: Task[] = useMemo(() => getTasksForAge(child?.age ?? 3), [child?.age]);

  useEffect(() => {
    if (!child?.id) return;
    fetch(`/api/agenda?childId=${child.id}&date=${date}`)
      .then((r) => r.json())
      .then((d) => {
        const set = new Set<string>();
        (d.items ?? []).forEach((it: { title: string }) => set.add(it.title));
        setCheckedKeys(set);
      })
      .catch(() => setCheckedKeys(new Set()));
  }, [child?.id, date]);

  const toggle = async (task: Task) => {
    if (!child?.id) return;
    try {
      const res = await fetch("/api/agenda", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ childId: child.id, date, task }),
      });
      const d = await res.json();
      const set = new Set<string>((d.items ?? []).map((it: any) => it.title));
      setCheckedKeys(set);
    } catch {}
  };

  return (
    <main className="min-h-screen p-4 flex flex-col gap-4">
      <BackHome />
      <h1 className="text-xl font-bold">Agenda</h1>

      <div className="flex flex-col gap-3">
        <ChildSwitcher value={child?.id} onChange={setChild} />
        <input
          type="date"
          value={date}
          onChange={(e) => setDate(e.target.value)}
          className="rounded-xl border px-3 py-2 shadow w-fit"
        />
      </div>

      {SLOTS.map((slot) => {
        const list = tasks.filter((t) => t.slot === slot);
        return (
          <section key={slot} className="mt-2">
            <h2 className="font-semibold">{slotLabel[slot]}</h2>
            {list.length === 0 && (
              <div className="text-sm text-gray-500">No tasks for this slot.</div>
            )}
            <div
              className="grid gap-2 mt-2"
              style={{ gridTemplateColumns: "repeat(auto-fill, minmax(160px, 1fr))" }}
            >
              {list.map((task) => {
                const isOn = checkedKeys.has(task.key);
                return (
                  <button
                    key={task.key}
                    onClick={() => toggle(task)}
                    className={`text-left rounded-2xl border p-3 shadow active:scale-95 ${
                      isOn ? "outline outline-2 outline-emerald-400" : ""
                    }`}
                  >
                    <div className="text-2xl">{task.icon}</div>
                    <div className="font-medium mt-1">{task.label}</div>
                    <div
                      className={`mt-2 text-xs inline-block rounded-full px-2 py-0.5 ${
                        isOn ? "bg-emerald-100" : "bg-gray-100"
                      }`}
                    >
                      {isOn ? "Done" : "To do"}
                    </div>
                  </button>
                );
              })}
            </div>
          </section>
        );
      })}
    </main>
  );
}

<button
  type="button"
  aria-pressed={isOn}
  onClick={() => toggleTask(task)}
  className={`tap-target inline-flex items-center gap-2 rounded-xl border px-3 py-2 shadow active:scale-95 focus-visible:outline-2 ${
    isOn ? "outline outline-2 outline-emerald-400 bg-emerald-50" : "bg-gray-50"
  }`}
>
  <span className="text-2xl" aria-hidden="true">{task.icon}</span>
  <span className="text-base">{task.label}</span>
</button>

